// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

// Цаг захиалгын модель
model Booking {
  id        String   @id @default(cuid())
  name      String
  phone     String
  email     String?
  service   String
  date      DateTime
  
  guests    String   @default("1") // Хүний тоо (String нь илүү уян хатан: "2 том 1 хүүхэд" г.м)
  notes     String?  // Нэмэлт мэдээлэл (Байхгүй байж болно - Optional)

  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}